{% extends 'admin/base_admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row">
         <div class="col-12 mb-3">
                {{form_start(form)}}
                {{form_widget(form)}}
                <button type="submit" class="btn btn-primary mt-3">Rechercher</button>
                <a href={{ path('admin_product_index') }} class="btn btn-secondary mt-3">Réinitialiser</a>
                {{form_end(form)}}
            </div>
            <div class="col-12 mb-3">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex align-items-center justify-content-between">
                            <h3>Gestion des produits</h3>
                            <a href="{{ path('admin_product_new') }}" class="btn btn-primary">Ajouter</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="navigation">
                                 {{ knp_pagination_render(products) }}
                            </div>
                            {% for product in products %}
                                <div class="col-4 mt-2">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>{{ product.name | upper }}</h5>
                                        </div>
                                        <div class="card-body">
                                            <img src="{{ product.image }}" alt="" class="w-100 imageCard">
                                        </div>
                                        <div class="card-footer">
                                           <p>Prix : {{ product.prix | priceFormatEuro }}</p>
                                           <p>Catégorie : {{ product.category.name }}</p>
                                        </div>
                                        <div class="card-footer">
                                            <a href="{{ path('admin_product_edit',{ 'id' : product.id } ) }}" class="btn btn-dark w-100">Modifier</a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            <div class="navigation mt-4">
                               {{ knp_pagination_render(products) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   </div>
{% endblock %}
