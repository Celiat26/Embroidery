{% extends 'base.html.twig' %}

{% block title %}Hello CustomerProductController!{% endblock %}

{% block body %}
<div class="container-sm">
    <div class="row">
        <div class="col-12">
            <h3 class="text-center">
                {{ category.name | upper }}
            </h3>
        </div>
            {% for product in category.products %}
            <div class="col-4 mt-2">
                <div class="card">
                    <div class="card-header">
                        <h5>{{ product.name }}</h5>
                    </div>
                    <div class="card-body">
                        <img src="{{ product.image }}" alt="" class="rounded-3 w-100 imageCard">
                    </div>
                    <div class="card-footer">
                        <p>Prix : {{ product.prix | priceFormatEuro }}</p>
                        <p>Cat√©gorie : {{ product.category.name }}</p>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('customer_product',{ 'id' : product.id })  }}" class="btn btn-primary w-100">Consulter <i class="fa-solid fa-eye"></i></a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
