{% extends 'base.html.twig' %}

{% block title %}LyaEmbroidery{% endblock %}

{% block body %}

{# carousel #}
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://images.unsplash.com/photo-1622378158084-f2221260e688?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=880&q=80" class="d-block w-100 imageCarousel" alt="Broderie fleur">
    </div>
    <div class="carousel-caption d-none d-md-block">
        <h2 class="text-black">LyaEmbroidery</h2>
        <p class="text-black">Achats de fils et d'accessoires</p>
      </div>
    <div class="carousel-item">
      <img src="https://images.pexels.com/photos/3838688/pexels-photo-3838688.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" class="d-block w-100 imageCarousel" alt="Fil broder">
     <div class="carousel-caption d-none d-md-block">
        <h2 >Des kits</h2>
        <p >Découvre nos kits pour apprendre à broder</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="https://images.unsplash.com/photo-1512841197422-8b9ae655ec23?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NjN8fGVtYnJvaWRlcnl8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60" class="d-block w-100 imageCarousel" alt="Broderie rose">
    <div class="carousel-caption d-none d-md-block">
        <h2 >Un blog</h2>
        <p >Un blog pour découvrir nos astuces.</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

{# fin carousel #}
<div class="container py-5">
    <div class="row">
        <div class="col-12 mb-3">
                {{form_start(form)}}
                {{form_widget(form)}}
                <button type="submit" class="btn btn-primary mt-3">Rechercher</button>
                <a href={{ path('home') }} class="btn btn-secondary mt-3">Réinitialiser</a>
                {{form_end(form)}}
            </div>
    </div>
</div>

{# categories #}

<div class="container py-5 ">
      <div class="row">
          <div class="col-12 mb-3">
            <div class="card">
              <div class="card-header">
                <div class="d-flex align-items-center justify-content-between">
                 <h3 class=" titleHome">Broderie and Co</h3>
                </div>
              </div>
            <div class="card">
              <div class="card-body">
                  <div class="row">
                    {% for category in categories %}
                      <div class="col-4">
                        <div class="card">
                          <div class="card-header">
                            <h5>{{ category.name }}</h5>
                          </div>
                            <div class="card-body">
                              <img src="{{ category.image }}" alt="" class="rounded-3 w-100 imageCard">  
                            </div>
                            <div class="card-footer">
                              <a href="{{ path('customer_category',{ 'id' : category.id }) }}" class="btn btn-primary w-100">Consulter <i class="fa-solid fa-eye"></i></a>
                            </div>
                        </div>
                      </div>
                      
                    {% endfor %}
                  </div>
              </div>
            </div> 
          </div>
          </div>
        </div>
    </div>

<section class="bg-white">
  <div class="container py-5">
      <div class="row">
          <div class="col-12 mb-3">
            <div class="card">
              <div class="card-header">
                <div class="d-flex align-items-center justify-content-between">
                 <h3 class=" titleHome">Nos produits</h3>
                </div>
              </div>
            <div class="card">
              <div class="card-body">
                  <div class="row">
                   
                    {% for product in products %}
                      <div class="col-4">
                        <div class="card">
                          <div class="card-header">
                            <h5>{{ product.name }}</h5>
                          </div>
                            <div class="card-body">
                              <img src="{{ product.image }}" alt="" class="rounded-3 w-100 imageCard">  
                            </div>
                            <div class="card-footer">
                              <p>Prix : {{ product.prix | priceFormatEuro }}</p>
                              <p>Catégorie : {{ product.category.name }}</p>
                           </div>
                            <div class="card-footer">
                              <a href="{{ path('customer_product',{ 'id' : product.id })  }}" class="btn btn-primary w-100">Consulter <i class="fa-solid fa-eye"></i></a>
                            </div>
                        </div>
                      </div>
                      
                    {% endfor %}
                  </div>
              </div>
            </div> 
          </div>
          </div>
        </div>
    </div>

</section>


{% endblock %}
